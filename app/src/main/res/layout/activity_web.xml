<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_app">
    
    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:paddingTop="13dp"
         android:paddingStart="11dp"
         android:paddingEnd="11dp"
         android:gravity="top"
         android:orientation="vertical">

    <TextView
        android:textColor="@color/k_activity_text"
        android:textSize="13dp"
        android:text="@string/k_activity_text1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
        
    <TextView
        android:textColor="@color/k_activity_text"
        android:textSize="13dp"
        android:text="@string/k_activity_text2"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
        
    <TextView
        android:textColor="@color/k_activity_text"
        android:textSize="13dp"
        android:text="@string/k_activity_text3"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
        
    <TextView
        android:textColor="@color/k_activity_text"
        android:textSize="13dp"
        android:text="@string/k_activity_text4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
        
    <TextView
        android:textColor="@color/k_activity_text"
        android:textSize="13dp"
        android:text="@string/k_activity_text5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
        
   </LinearLayout>

</androidx.core.widget.NestedScrollView>